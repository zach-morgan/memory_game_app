<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trophy_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/win_border"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/trophy_border" />

    <ImageView
        android:id="@+id/gold_trophy_win"
        android:layout_width="294dp"
        android:layout_height="320dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/win_border"
        app:layout_constraintEnd_toEndOf="@+id/win_border"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/win_border"
        app:layout_constraintTop_toTopOf="@+id/win_border"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/gold_win" />

    <ImageView
        android:id="@+id/silver_trophy_win"
        android:layout_width="279dp"
        android:layout_height="284dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/win_border"
        app:layout_constraintEnd_toEndOf="@+id/win_border"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/win_border"
        app:layout_constraintTop_toTopOf="@+id/win_border"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/silver_win" />

    <ImageView
        android:id="@+id/bronze_trophy_win"
        android:layout_width="285dp"
        android:layout_height="302dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/win_border"
        app:layout_constraintEnd_toEndOf="@+id/win_border"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/win_border"
        app:layout_constraintTop_toTopOf="@+id/win_border"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/bronze_win" />

    <TextView
        android:id="@+id/final_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/final_moves"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/final_moves"
        app:layout_constraintTop_toBottomOf="@+id/final_moves"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/final_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/win_border"
        app:layout_constraintEnd_toEndOf="@+id/win_border"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/win_border"
        app:layout_constraintTop_toTopOf="@+id/win_border"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/no_medal_win"
        android:layout_width="262dp"
        android:layout_height="293dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/win_border"
        app:layout_constraintEnd_toEndOf="@+id/win_border"
        app:layout_constraintStart_toStartOf="@+id/win_border"
        app:layout_constraintTop_toTopOf="@+id/win_border"
        app:layout_constraintVertical_bias="0.682"
        app:srcCompat="@drawable/no_medal_kid" />

    <Button
        android:id="@+id/back_to_level_select_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:text="LEVELS"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/next_level_button"
        app:layout_constraintEnd_toStartOf="@+id/next_level_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/next_level_button"
        app:layout_constraintVertical_bias="0.0"
        tools:text="LEVELS" />

    <Button
        android:id="@+id/next_level_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:text="NEXT LEVEL"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/win_border"
        tools:text="NEXT LEVEL" />
</android.support.constraint.ConstraintLayout>