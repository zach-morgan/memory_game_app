<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zach.memorygame.S2L3"
    android:theme="@style/cartoon_stage2_level3"
    android:id="@+id/stage2level3_layout"
    android:buttonStyle="@style/cartoon_level_buttons">


    <Button
        android:id="@+id/S2L3_B1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/S2L3_B2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B12" />

    <Button
        android:id="@+id/S2L3_B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/S2L3_B12"
        app:layout_constraintStart_toEndOf="@+id/S2L3_B1"
        app:layout_constraintTop_toBottomOf="@+id/S2L3_B1"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/S2L3_B4"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B1"
        app:layout_constraintTop_toBottomOf="@+id/S2L3_B3"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/S2L3_B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B3"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B3"
        app:layout_constraintTop_toBottomOf="@+id/S2L3_B4"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/S2L3_B6"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B4"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B4"
        app:layout_constraintTop_toBottomOf="@+id/S2L3_B5" />

    <Button
        android:id="@+id/S2L3_B7"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B6"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B12"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B12"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B6" />

    <Button
        android:id="@+id/S2L3_B8"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B7"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B2"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B2"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B7" />

    <Button
        android:id="@+id/S2L3_B9"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B4"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B2"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B2"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B4" />

    <Button
        android:id="@+id/S2L3_B10"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B3"
        app:layout_constraintEnd_toStartOf="@+id/S2L3_B2"
        app:layout_constraintStart_toEndOf="@+id/S2L3_B12"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B3" />

    <Button
        android:id="@+id/S2L3_B11"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B5"
        app:layout_constraintEnd_toEndOf="@+id/S2L3_B10"
        app:layout_constraintStart_toStartOf="@+id/S2L3_B10"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B5" />

    <Button
        android:id="@+id/S2L3_B12"
        app:layout_constraintBottom_toBottomOf="@+id/S2L3_B1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/S2L3_B1" />

    <TextView
        android:id="@+id/cardSwapPopUp"
        android:layout_width="324dp"
        android:layout_height="386dp"
        android:background="@drawable/cartoon_popup_text_holder"
        android:gravity="center"
        android:text="Card Swap!"
        android:textSize="72sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
